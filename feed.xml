---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0">
  <channel>
    <title>Read‑Aloud Blog</title>
    <link>{{ site.url }}{{ site.baseurl }}/blog/</link>
    <description>Articles and updates from read‑aloud.com.</description>
    <language>en-us</language>
    <lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>
    {% assign posts = site.posts | sort: "date" | reverse %}
    {% for post in posts limit: 20 %}
    <item>
      <title>{{ post.title | xml_escape }}</title>
      <link>{{ site.url }}{{ site.baseurl }}{{ post.url }}</link>
      <guid isPermaLink="true">{{ site.url }}{{ site.baseurl }}{{ post.url }}</guid>
      <pubDate>{{ post.date | date_to_rfc822 }}</pubDate>
      <description>{{ post.excerpt | strip_html | strip_newlines | xml_escape }}</description>
    </item>
    {% endfor %}
  </channel>
</rss>
